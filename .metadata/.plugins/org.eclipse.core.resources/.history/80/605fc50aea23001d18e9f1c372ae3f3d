package application;

import java.util.Scanner;

public class Program {

	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		
		System.out.println("Digite o numero de pagadores: ");
		int n = sc.nextInt();
		
		for (int i = 0; i<n; i++) {
			sc.nextLine();
			System.out.println("Digite os dados do pagador #"+(i+1));
			
			System.out.println("Nome: ");
			String nome = sc.nextLine();
			System.out.print("Pessoa fisica ou juridica?(f/j): ");
			char tipo = sc.next().charAt(0);
			System.out.println("Digite o ganho anual: ");
			Double renda = sc.nextDouble();
			if(tipo == 'f') {
				System.out.print("Despesas medicas: ");
				Double despesas = sc.nextDouble();
			}
			else {
				System.out.println("Quantidade de funcionarios: ");
				Integer numFunc = sc.nextInt();
			}
		}
		sc.close();
	}

}
