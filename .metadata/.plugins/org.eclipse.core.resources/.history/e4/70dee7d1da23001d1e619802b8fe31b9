package application;

import java.util.Scanner;

import entities.Rectangle;

public class Program {

	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		System.out.println("Digite o numero de formas: ");
		int n = sc.nextInt();
		
		for(int i=0; i<n; i++) {
			sc.next();
			System.out.println("Digite os dados da forma #"+ (i+1));
			System.out.println("Retangulo ou circulo?(r/c): ");
			char forma = sc.next().charAt(0);
			System.out.println("COR(BLACK/BLUE/RED): ");
			String cor = sc.nextLine();
			if(forma == 'r') {
				System.out.println("Digite a altura: ");
				Double alt = sc.nextDouble();
				System.out.println("Digite a largura: ");
				Double larg = sc.nextDouble();
				Rectangle ret = new Rectangle(Color.Valueof(cor), alt, larg);
			}
		}
		
		
		sc.close();
	}

}
